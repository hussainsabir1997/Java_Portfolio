		Scanner input = new Scanner(System.in);
				
		System.out.println("David Persson â€“ Assignment 6\n");
		
		int option;
		System.out.print("To set the length and width"
				+ " of your rectangle,\n"
				+ "type any number. "
				+ "To quit, type 1. \n"
